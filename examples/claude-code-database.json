{
  "mcpServers": {
    "amari": {
      "command": "/path/to/amari-mcp/target/release/amari-mcp",
      "args": [
        "--database-url", "postgresql://user:password@localhost/amari_mcp",
        "--gpu",
        "--log-level", "info"
      ],
      "env": {
        "RUST_LOG": "amari_mcp=info"
      }
    }
  }
}